<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TodoList</title>
    <link rel="stylesheet" href="./style.css">
</head>
<body>
  <div class="todo-list">
    <h1>我的待办事项</h1>

    <form onsubmit="return false">
      <input type="text" name="task" placeholder="请输入新任务..." class="todo-list__input" />
      <button type="submit" class="todo-list__add-btn">添加</button>
    </form>

    <ul>
      <% if (Array.isArray(tasks) && tasks.length > 0) { %>
        <% tasks.forEach((task, index) => { %>
          <li class="todo-list__item" data-id="<%= task.id %>">
            <input type="checkbox" class="todo-list__checkbox" <%= task.completed ? 'checked' : '' %> />
            <span class="<%= task.completed ? 'is-completed' : '' %>"><%= task.content %></span>
            <button class="todo-list__delete-btn">删除</button>
          </li>
        <% }) %>
      <% } else { %>
        <li class="todo-list__empth">暂无任务</li>
      <% } %>
    </ul>
  </div>
  <script src="./TodoList.js"></script>
</body>
</html>